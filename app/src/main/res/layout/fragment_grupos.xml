<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GruposFragment"
    android:background="@color/sand_dark">

    <View
        android:id="@+id/container_grupos"
        style="@style/edit_desc_produto"
        android:layout_width="354dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_titulo_produto"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        android:text="Categoria"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_listaFragment"
        app:layout_constraintEnd_toEndOf="@id/container_grupos"
        app:layout_constraintStart_toStartOf="@id/container_grupos"
        app:layout_constraintTop_toTopOf="@id/container_grupos"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_listaFragment"
        style="@style/Button_Produto"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:background="@color/brown"
        android:text="Aventura"
        android:textCursorDrawable="@drawable/ic_baseline_shopping_basket_24"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_grupos"
        app:layout_constraintEnd_toEndOf="@id/container_grupos"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@id/container_grupos"
        app:layout_constraintTop_toTopOf="@id/container_grupos"
        app:layout_constraintVertical_bias="0.185" />


</androidx.constraintlayout.widget.ConstraintLayout>