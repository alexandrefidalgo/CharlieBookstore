<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".fragments.DescricaoFragment">


    <View
        android:id="@+id/container_2"
        style="@style/edit_desc_produto"
        android:layout_width="344dp"
        android:layout_height="185dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="109dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_2"
        app:layout_constraintEnd_toEndOf="@id/container_2"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@id/container_2"
        app:layout_constraintTop_toTopOf="@+id/container_2"
        app:srcCompat="@drawable/harry_potter_e_a_pedra_filosofal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_t_Produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry potter e a Pedra Filosofal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/container_2"
        app:layout_constraintEnd_toEndOf="@id/container_2"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="@id/container_2"
        app:layout_constraintTop_toTopOf="@+id/container_2"
        app:layout_constraintVertical_bias="0.072"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_adicionar"
        style="@style/Button_Produto"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:text="Adicionar"
        android:textCursorDrawable="@drawable/ic_baseline_shopping_basket_24"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_2"
        app:layout_constraintEnd_toEndOf="@id/container_2"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="@id/container_2"
        app:layout_constraintTop_toTopOf="@+id/container_2"
        app:layout_constraintVertical_bias="0.906"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>